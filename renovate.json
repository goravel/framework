{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "ðŸ¤– Dependencies"
  ],
  "matchFileNames": ["go.mod", "tests/go.mod", ".github/**"],
  "commitMessagePrefix": "chore(deps): ",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "platformAutomerge": true,
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "groupName": "non-major dependencies",
      "matchUpdateTypes": [
        "digest",
        "pin",
        "patch",
        "minor"
      ],
      "automerge": true
    }
  ],
  "ignoreDeps": []
}
